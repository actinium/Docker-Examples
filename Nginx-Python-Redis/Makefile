################################################################################
# Build
################################################################################
.PHONY: build
build:
	@docker compose build

################################################################################
# Start
################################################################################
.PHONY: start
start:
	@docker compose up -d

################################################################################
# Stop
################################################################################
.PHONY: stop
stop:
	@docker compose down

################################################################################
# Clean
################################################################################
.PHONY: clean
clean:
	@docker compose down --rmi local

################################################################################
# PS
################################################################################
.PHONY: ps
ps:
	@docker compose ps
