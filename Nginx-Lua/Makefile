################################################################################
# Build
################################################################################
.PHONY: build
build:
	@docker compose build

################################################################################
# Start
################################################################################
.PHONY: start
start:
	@docker compose up -d

################################################################################
# Stop
################################################################################
.PHONY: stop
stop:
	@docker compose down -v

################################################################################
# Restart
################################################################################
.PHONY: restart
restart:
	@make --no-print-directory stop
	@make --no-print-directory build
	@make --no-print-directory start

################################################################################
# Clean
################################################################################
.PHONY: clean
clean:
	@docker compose down -v --rmi local

################################################################################
# PS
################################################################################
.PHONY: ps
ps:
	@docker compose ps
